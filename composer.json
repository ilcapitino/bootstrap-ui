{
    "name": "friendsofcake/bootstrap-ui",
    "description": "Twitter Bootstrap 3 support for CakePHP 3",
    "type": "cakephp-plugin",
    "keywords": ["cakephp", "twitter", "bootstrap"],
    "homepage": "http://github.com/friendsofcake/bootstrap-ui",
    "license": "MIT",
    "authors": [
        {
            "name": "Jad Bitar",
            "homepage": "http://jadb.io",
            "role": "Author"
        },
        {
            "name": "Others",
            "homepage": "https://github.com/friendsofcake/bootstrap-ui/graphs/contributors"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.2.0",
        "cakephp/cakephp": "4.x"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "cakephp/bake": "4.x",
        "cakephp/cakephp-codesniffer": "dev-next"
    },
    "support": {
        "issues": "http://github.com/friendsofcake/bootstrap-ui/issues",
        "source": "http://github.com/friendsofcake/bootstrap-ui"
    },
    "autoload": {
        "psr-4": {
            "BootstrapUI\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BootstrapUI\\Test\\": "tests",
            "TestApp\\": "tests/test_app/TestApp"
        }
    },
    "scripts": {
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP --ignore=comparisons src/ tests/",
        "cs-fix": "phpcbf --standard=vendor/cakephp/cakephp-codesniffer/CakePHP --ignore=comparisons src/ tests/",
        "stan": "phpstan analyse src/ && psalm --show-info=false",
        "psalm": "psalm --show-info=false",
        "stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^0.11 vimeo/psalm:^3.0 && mv composer.backup composer.json", 
        "test": "phpunit"
    }
}
